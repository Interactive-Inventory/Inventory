  <script type="text/javascript">

    $(document).ready(function () {
      // SIDENAV
      $('.sidenav').sidenav();
      $('.sidenav').sidenav('close');
    });

    // UPDATE MODAL
    $(document).ready(function () {
      $('.modal').modal();
      $('.search-input').keydown(function (event) {
        if (event.keyCode == 13) {
          window.location.replace('/inventory/' + $('.search-input').val());
          return false;
        }
      });
      $("#submit").on("click", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();

        var newItem = $("#item").val();
        var newCategory = $("#category").val();
        var newSize = $("#size").val();
        var newColor = $("#color").val();
        var newQuantity = $("#quantity").val();
        var newReceived = $("#received").val();

        var newItemInfo = {
          item: newItem,
          category: newCategory,
          size: newSize,
          color: newColor,
          quantity: newQuantity,
          received: newReceived
        };
        console.log(newItemInfo);
        //  Send the PUT request.
        $.ajax("/api/inventory/", {
          type: "POST",
          data: newItemInfo
        }).then(
          function () {
            console.log("changed the name", newItemInfo);
            // Reload the page to get the updated list
            location.reload();
          }
        );

      });
    });

